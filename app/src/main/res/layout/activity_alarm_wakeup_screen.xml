<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    tools:context=".alarm_wakeup_screen">

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/arrow_right"
        app:button_image_enabled="@drawable/green_check"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="Swipe Left"
        app:button_background="@drawable/swipe_alarm_button_shape"
        app:inner_text_background="@drawable/swipe_alarm_background_shape"
        app:inner_text_bottom_padding="16dp"
        app:inner_text_color="#000"
        app:inner_text_size="18sp"
        app:inner_text_top_padding="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>